{
  "name": "file-to-link-bot",
  "description": "Telegram File-to-Link Bot with MongoDB and direct download links",
  "repository": "https://github.com/yourusername/yourrepo",
  "stack": "heroku-20",
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "value": "123456"
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "value": "your_api_hash_here"
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from BotFather",
      "value": "your_bot_token_here"
    },
    "OWNER_IDS": {
      "description": "Comma separated Telegram user IDs allowed to upload",
      "value": "123456789"
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI",
      "value": "mongodb+srv://username:password@cluster0.mongodb.net/dbname?retryWrites=true&w=majority"
    },
    "LOG_CHANNEL": {
      "description": "Telegram Channel ID for logging uploaded files",
      "value": "-1001234567890"
    },
    "WEB_URL": {
      "description": "Your Heroku app URL",
      "value": "https://dead7.herokuapp.com"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "mongolab:sandbox"
    }
  ]
}
